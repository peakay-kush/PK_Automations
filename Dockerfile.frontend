FROM node:18-alpine
WORKDIR /app

# Install curl for healthchecks and other utilities
RUN apk add --no-cache curl

# Install deps
COPY package.json package-lock.json ./
RUN npm ci --production

# Copy rest and build
COPY . .
RUN npm run build

EXPOSE 3000
ENV NODE_ENV=production
CMD ["npm", "run", "start"]
